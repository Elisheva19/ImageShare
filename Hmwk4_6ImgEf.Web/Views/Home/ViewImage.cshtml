@using Hmwk4_6ImgEf.Data;
@model ViewImageViewModel;

<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <input type="hidden" id="image-id" value="@Model.ViewImage.Id" />
            <div class="col-md-10 col-md-offset-1 well">
                <h1>@Model.ViewImage.Title</h1>
                <img src="/uploads/@Model.ViewImage.ImagePath" style="width: 900px;" />
                <br />
                <br />
                @if (Model.Liked)
                {
                    <button id="like-button" disabled class="btn btn-primary btn-lg">LIKE</button>
                }
                else
                {
                    <button id="like-button"  class="btn btn-primary btn-lg">LIKE</button>

                }

                 Current Likes: <span id="likes-count">@Model.ViewImage.Likes</span>
            </div>
        </div>


    </main>
</div>


@section Scripts{

    <script src="/js/Likes.js"></script>
}
